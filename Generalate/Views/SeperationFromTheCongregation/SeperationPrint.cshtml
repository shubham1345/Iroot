@model Generalate.Models.tbl_SeperationFromTheCongregation
@{
    Layout = null;
}
<head>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">

    <script type="text/javascript">
    $(document).ready(function () {

        $.getJSON("GetAll",
        function (json) {
            var tr;

            //Append each row to html table
            for (var i = 0; i < json.length; i++) {
                tr = $('<tr />');
                tr.append("<td hidden='hidden'>" + json[i].SeperationId + "</td>");
                //tr.append('<td><a href=ViewProfile/' + json[i].GId + '>' + json[i].MemberID + '</a></td>');
                tr.append("<td>" + json[i].SirName + "</td>");


                tr.append("<td>" + json[i].Name + "</td>");
                tr.append("<td>" + json[i].SeperationDate + "</td>");
                tr.append("<td>" + json[i].Purpose + "</td>");
                tr.append("<td>" + json[i].NatureOfSeperation + "</td>");

                $('table').append(tr);

            }
        });
    });

    </script>

</head>

<div class="form-horizontal">

    <div class="container">
        <div class="form-horizontal">
            <br />
            <table class="table table-striped  table-hover" id="EmpInfo">
                <thead>
                    <tr style="background-color:#001f6b; color:white">
                        <th hidden="hidden"> Id </th>
                        <th> Name </th>

                        <th> Sur Name </th>
                        <th> Date Of Separation </th>
                        <th> Purpose </th>
                        <th> Nature Of Seperation </th>

                    </tr>
                </thead>
                <tbody class="tbody"> </tbody>
            </table>
        </div>

    </div>
</div>


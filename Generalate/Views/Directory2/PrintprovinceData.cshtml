                                                                                        {
                                                                                            <div class="col-xs-4">
                                                                                                <h4>@{@HomeController.GetControlTextByControlId("ProvinceSuperior");}</h4>
                                                                                            </div>
                                                                                            <div class="col-xs-4">
                                                                                                @{
                                                                                                    foreach (var prosu in item.ProvinceSuperior)

@model Generalate.Models.tbl_CommonDataListItems

<head>
    @*Required Js File for Apartment*@
    <script src="~/Scripts/additional/CommonDataListItems.js"></script>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CDLITId, new { htmlAttributes = new { @class = "form-control", Id = "CDLITId" } })

        <div class="container">
            <div class="form-horizontal">
                <br />
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();" style="background-color:#001f6b">Add</button><br /><br />
                <table class="table table-striped  table-hover" id="EmpInfo">
                    <thead style="color:white; background-color:#001f6b">
                        <tr>
                            <th hidden="hidden"> Id </th>
                            <th> Datalist Name </th>
                            <th> Datalist ItemName </th>
                            <th> Staus </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody class="tbody"> </tbody>
                </table>
            </div>
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">DataList Items</h4>
                        </div>
                        <div class="modal-body">
                            <div class="row">
                                @Html.HiddenFor(model => model.CDLITId, new { htmlAttributes = new { @class = "form-control", Id = "CDLITId" } })

                                <div class="col-sm-12">

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            DataList Name
                                            @Html.EditorFor(model => model.DataListName, new { htmlAttributes = new { @class = "form-control", Id = "DataListName", list = "generalst" } })
                                            @Html.ValidationMessageFor(model => model.DataListName, "", new { @class = "text-danger" })
                                            <datalist id="generalst"> </datalist>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            DataList Item Name
                                            @Html.EditorFor(model => model.DataListItemName, new { htmlAttributes = new { @class = "form-control", Id = "DataListItemName" } })
                                            @Html.ValidationMessageFor(model => model.DataListItemName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            Status
                                            @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", Id = "Status" } })
                                            @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <div class="form-group" align="right">
                                                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                                                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                                                <button type="button" class="btn btn-default" data-dismiss="modal" style="color:white; background-color:#001f6b">Close</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        //alert($('#mySidenav_Dynamic').html());
        $('#Dynamic_Checkbox').val('1');
        $("#mySidenav").empty();
        $("#mySidenav").html($('#mySidenav_Dynamic').html());
        $('#mySidenav_Dynamic').empty();

        var dynamiColData = '@ViewBag.ColumnShowComm';
        //alert(dynamiColData);
        if (dynamiColData != '') {
            var CommaSepData = dynamiColData.split(',');
            $.each(CommaSepData, function (index, value) {
                $("#checkbox-grid-" + CommaSepData[index]).attr('checked','');
                $(".hide-" + CommaSepData[index]).show();
            });
        }
        else {
            $('input[class=notdivhide]').each(function () {
                $(this).attr('checked', 'true');
            });
            $('.AllShow').show();
        }
        $('input[class=notdivhide]').on('click', function () {
            var id = $(this).attr("id").replace('checkbox-grid-', '');
            if ($(this).is(':checked')) {
                $(".hide-" + id).show();
            }
            else {
                $(".hide-" + id).hide();
            }
        });

    });
</script>

<script>
    $(".EditGeneralCouncil3").on('click', function () {
        //debugger;
        var id = $(this).attr("data-val");
        $(".brd-panel").scrollTop(0);
        GetGeneralCouncilById3(id);
    });

    function GetGeneralCouncilById3(id) {
        $.ajax({
            url: "/Home/GetGeneralTreasurerById?id=" + id,
            type: "GET",
            contentType: "application/json;charset=utf-8",
            dataType: "json",
            success: function (result) {

                $("#CouncilId3").val(result.Id);
                $("#FromDate3").val(result.FromDate);
                $("#ToDate3").val(result.ToDate);
                $("#Mandate3").val(result.Mandate);
                $("#MissionCountry3").val(result.MissionCountry);

                $("#MemberName3").val(result.Name);
                $("#GenId").val(result.GenId);

                $('.PersonalDetailsId_03').val(result.PersonalDetailsId);
                $('#CounProvince_03').val(result.ProvinceId);
                $('.DataListItemsId_03').val(result.DataListItemsId);

                $("#DesignationName3").val(result.Designation);
                $("#ResponsibilityName3").val(result.Responsibility);
                $("#Status3").val(result.Status);
                $("#addRow3").prop('disabled', true);
                $("#RemoveRow3").prop('disabled', true);
                $("#SaveCouncilBtn3").val("Update");
            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });
    }

    $(".DeleteGeneralCouncil3").on('click', function () {
        var id = $(this).attr("data-val");
        //alert(id);
        var cnf = confirm("Are You Sure, You want to delete?");
        if (cnf == true) {
            window.location.href = "/Home/DeleteGeneralTreasurer?id=" + id
        }
    });

    $(".btnupdate").on('click', function () {
        var countid = $(this).attr("data-id");
        countid = countid.replace('Main_', '');
        var newstatus = $("#drp_" + countid).val();
        $.ajax({
            url: "/Home/UpdateGeneraltreasererstatus",
            data: { countid: countid, newstatus: newstatus },
            type: "GET",
            datatype: "json",
            contentType: "application/json;charset=utf-8",
            success: function (result) {
                if (result == "Success") {
                    alert("Updated Successfully");
                    location.reload();
                }
                else if (result == "Same") {
                    alert("Current Status and New status are same,Please select New status");
                }
                else {
                    alert("Data Not Updated");
                    location.reload();
                }

            },
            error: function (errormessage) {
                alert(errormessage.responseText);
            }
        });

    });

</script>

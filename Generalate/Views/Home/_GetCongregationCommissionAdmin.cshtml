                <th class="hide-1 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("S_No");}</span></th>
                <th class="hide-2 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Name");}</span></th>
                <th class="hide-3 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Designation_Name");}</span></th>
                <th class="hide-4 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Responsibility_Name");}</span></th>
                <th class="hide-5 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("FromDate");}</span></th>
                <th class="hide-6 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("ToDate");}</span></th>
                <th class="hide-7 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("ManDate");}</span></th>
                <th class="hide-8 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Status");}</span></th>
                <th class="hide-9 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Update");}</span></th>
                @*<th class="hide-8 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Designation");}</span></th>*@
                @* <th class="hide-9 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Responsibility");}</span></th>*@
                <th class="hide-10 AllShow" style="background-color:#29b2e1;color:white;display:none"> <span>@{@HomeController.GetControlTextByControlId("Action");}</span></th>
                <th style="width:2%;background-color:#29b2e1;color:white;cursor:pointer" id="opendivdots" class="notdivhide" onclick="openNav()">...</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = ViewBag.StartIndex;
                foreach (var item in ViewBag.AllGeneralCouncil)
                {
            <tr>
                <td><input type="checkbox" id="checkbox-76" class="checkSingle"></td>
                <td class="AllShow hide-1" style="display:none">@i</td>
                <td class="AllShow hide-2" style="display:none">@item.MemberName</td>
                <td class="AllShow hide-3" style="display:none">@item.DesignationName</td>
                <td class="AllShow hide-4" style="display:none">@item.ResponsibilityName</td>
                <td class="AllShow hide-5" style="display:none">@item.FromDate</td>
                <td class="AllShow hide-6" style="display:none">@item.ToDate</td>
                <td class="AllShow hide-7" style="display:none">@item.ManDate</td>
                <td class="AllShow hide-8" style="display:none">
                    <select class="form-control" id="drp_@item.Id">
                        @{
                            if (item.Status == "0")
                            {

                                <option value="0">Active</option>
                                <option value="1">Completed</option>
                            }
                            else
                            {
                                <option value="1">Completed</option>
                                <option value="0">Active</option>
                            }
                        }

                    </select>
                </td>
                <td class="AllShow hide-9" style="display:none">
                    <button class="btn btn-success btnupdate" type="button"  data-id="Main_@item.Id">Update</button>
                </td>

                <td>
                    @{
                        var ispermissinview = viewpermissions.FirstOrDefault(x => x.Editpermission == true && x.PageName == "General Administration");
                        if (ispermissinview != null)
                        {
                            <a href="/Home/CongrationList2_GeneralAdminCommission?CommisionId=@item.Id">
                                <i style="font-size:12px; color:#29b2e1; cursor:pointer;" data-val="@item.Id" class="fa fa-edit EditGeneralCouncil"></i>
                            </a>
                        }

                        var ispermissiondelete = viewpermissions.FirstOrDefault(x => x.Deletepermission == true && x.PageName == "General Administration");
                        if (ispermissiondelete != null)
                        {
                            <a>
                                <i style="font-size:12px; color:#29b2e1; cursor:pointer;" data-val="@item.Id" class="fa fa-trash-o DeleteGeneralCouncil"></i>
                            </a>
                        }
                    }


                </td>

            </tr>
                    i++;
                }

            }
        </tbody>
    </table>
    <div id="mySidenav_Dynamic" class="sidenav" style="display:none">

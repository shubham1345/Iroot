@model Generalate.Models.Tbl_UserLogins

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="" style="margin-left:20px; margin-right:20px;">
                <div class="form-horizontal">
                    <br />

                    <div class="panel-group">
                        <div class="panel panel-primary" style="margin-top:10px; background-color:#fff">
                            <div class="tab panel-heading" style="background-color:#001f6b">
                                <a style="color:white;">Change Password</a>
                            </div>

                            <div class="" style="margin-left:20px; margin-right:20px;">
                                <div class="form-horizontal">
                                    <br />

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-3">
                                            User Name
                                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3">
                                            Current Password
                                            @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = "form-control", Type = "Password" } })
                                            @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-3">
                                            New Password
                                            @Html.EditorFor(model => model.Spare1, new { htmlAttributes = new { @class = "form-control", Type = "Password" } })
                                            @Html.ValidationMessageFor(model => model.Spare1, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10" style="margin-left:300px;">
                                            <input type="submit" value="Update" class="btn btn-default" id="btnAdd" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


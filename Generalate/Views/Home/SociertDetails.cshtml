@section scripts
        {
    <script src="~/Scripts/InstitutionJS.js"></script>
    <script src="~/Scripts/additional/SociertJS.js"></script>
    <script>
        $(document).ready(function () {
            $('#SoctblTbl').DataTable();
            $('#GovernerTbl').DataTable();
            $('#SummaryTable').DataTable();
        });
    </script>
    <script>
        $(document).ready(function () {
            $('a[data-toggle="tab"]').on('click', function (e) {
                localStorage.setItem('activeTab', $(this).attr('href'));
            });
            var activeTab = localStorage.getItem('activeTab');
            if (activeTab) {
                $('#myTab a[href="' + activeTab + '"]').tab('show');
            }
        });
    </script>
    <script>
        $(".GovEdit").on('click', function () {
          //debugger;
            $('#FormGoverner').attr('action', '/Home/UpdateGoverner');
            var id = $(this).attr("data-val");
            $("#btnGovernerSave").text("Update");
            $(".panel-body").scrollTop(0);
            GetGoverner(id);
        });
        function GetGoverner(id) {
            $.ajax({
                url: "/Home/GetGoverner?id=" + id,
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                  //debugger;
                    if (result != null) {
                        $('#ID').val(result.Id);
                        $('#MyID').val(result.MyId);
                        $('#Name').val(result.Name);
                        $("#Designation").val(result.Designation);
                        $("#MobileNo").val(result.MobileNo);
                        $("#Address").val(result.Address);
                        $("#PanNo").val(result.PanNo);
                        $("#PanDoc").text(result.PanDoc);
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            }); return false;
        }
        $(".GovDelete").on('click', function () {

            var id = $(this).attr("data-val");
            if (confirm("Do you want to delete ?")) {
                window.location.href = "/Home/DeleteGoverner?id=" + id;
            }
        });

        $(".EditSociert").on('click', function () {
          //debugger;
            $('#SociertForm').attr('action', '/Home/UpdateSociert');
            var id = $(this).attr("data-val");
            $("#btnAddSociert").text("Update");
            $(".panel-body").scrollTop(0);
            GetSociertById1(id);
        });
        function GetSociertById1(id) {
            $.ajax({
                url: "/Home/GetSociertById1?id=" + id,
                type: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (result) {
                  //debugger;
                    if (result != null) {
                        $('#id').val(result.id);
                        $("#MyID").val(result.SocId);
                        $('#Tital').val(result.other1);
                        $('#Date').val(result.Date);
                        $("#Description").val(result.Description);
                        $("#file12").text(result.File1);
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            }); return false;
        }
        $(".DeleteSociert").on('click', function () {
            var id = $(this).attr("data-val");
            if (confirm("Do you want to delete ?")) {
                window.location.href = "/Home/DeleteSociertDataById?id=" + id;
            }
        });
    </script>
    @*//PopupData*@

    <script>
        $('.GovView').on("click", function () {
            $('#myModal1').modal('show');
            var id = $(this).attr("data-val");
            GetAllParishGovernerById1(id);
        });
        function GetAllParishGovernerById1(id) {
            $.ajax({
                url: "/Paris/GetAllParishGovernerById1?id=" + id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {

                    $("#MemberNameGoverning").text(data.Name);
                    $("#DesignationGoverning").text(data.Designation);
                    $("#ContactNoGoverning").text(data.MobileNo);
                    $("#AddressGoverning").text(data.Address);
                    $("#PANNumberGoverning").text(data.PanNo);
                    $("#FileGoverning").attr("href", "/Image/Sociert/" + data.PanDoc);
                },
                error: function (er) {
                }
            });
        }
    </script>

    <script>
        $('.SociertView').on("click", function () {
            $('#myModal2').modal('show');
            var id = $(this).attr("data-val");
            GetAllSocirtById1(id);
        });
        function GetAllSocirtById1(id) {
            $.ajax({
                url: "/Home/GetAllSocirtById1?id=" + id,
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (data) {
                    $("#TitleTrust").text(data.other1);
                    $("#DateTrust").text(data.Date);
                    $("#DescriptionTrust").text(data.Description);
                    $("#FileTrust").attr("href", "/Image/Sociert/" + data.File1);
                },
                error: function (er) {
                }
            });
        }
    </script>

    <script>
      //debugger;
        var iscode = $.cookie("iscode");
        if (iscode == "200") {
            $("#mymessage").html("<b>Data saved successfully !</b>");
            $("#mymessage").css("color", "green");
            $('#myalertbox').modal({
                backdrop: 'static'
            });
            $("#myalertbox").modal("show");
            $.cookie('iscode', null, { path: '/' })
        }
        $(".closemodel").on("click", function () {
            location.reload();
        });
    </script>

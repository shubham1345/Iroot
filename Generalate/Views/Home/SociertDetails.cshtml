                                                                <tr>
                                                                    <th style="width:17%"> <span>@{@HomeController.GetControlTextByControlId("PAN_Number");}</span></th>
                                                                    <td><span id="PANNumberGoverning"></span>  </td>
                                                                    <th><span>@{@HomeController.GetControlTextByControlId("File");}</span></th>

        <script>
            $(document).ready(function () {
                $('#DepartureDate').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    dateFormat: "dd/mm/yy",
                    yearRange: '1970:2080'
                });
                $('#ArrivalDate').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    dateFormat: "dd/mm/yy",

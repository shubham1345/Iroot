                                                            <label><span>@{@HomeController.GetControlTextByControlId("Contact_No");}</span></label>
                                                            <input type="text" id="MobileNo" name="MobileNo" class="form-control">
                                                        </div>
                                                    </div>
                                                    <div class="col-sm-6">

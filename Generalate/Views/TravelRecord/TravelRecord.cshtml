<div class="form-horizontal" style="margin-left:30px; margin-right:30px;">
    <p>
        <br />
        <button type="button" class="btn btn-primary" id="addtravelrecord" style="background-color:#001f6b">Add</button>
        <button type="button" class="btn btn-primary" id="printbtn" style="background-color:#001f6b">Print</button>
        @*@Html.ActionLink("Create New", "Create")*@

    </p>
    @*<table class="table table-striped  table-hover" id="EmpInfo" style="border:solid; border-color:dimgrey;">
        <tr style="background-color:dimgrey; color:white">*@
    <div class="panel-group">
        <div class="panel panel-primary" style="margin-top:10px; background-color:#fff">
            <div class="tab panel-heading" style="background-color :#009be1">
                <a style="color:white;">Travel Record (International) </a>
            </div>

            <div class="" style="margin-left:20px; margin-right:20px;">
                <div class="form-horizontal">
                    <br />
                    <table class="table table-striped  table-hover" id="EmpInfo" style="border:solid; border-color:#001f6b">
                        <thead>
                            <tr style="background-color:#001f6b; color:white">
                                <th style="display:none">
                                    @*@Html.DisplayNameFor(model => model.MemberID)*@
                                    Member ID
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Name)*@
                                    Name
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Name)*@
                                    Sur Name
                                </th>

                                <th>
                                    @*@Html.DisplayNameFor(model => model.FromDate)*@
                                    From
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.ToDate)*@
                                    To
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Place)*@
                                    Place
                                </th>
                                <th>
                                    @*@Html.DisplayNameFor(model => model.Purpose)*@
                                    Purpose
                                </th>
                                <th>Action</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                            <tr>
                                <td style="display:none">
                                    @Html.DisplayFor(modelItem => item.MemberID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SirName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Place)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Purpose)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.TravelId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.TravelId })
                                </td>
                            </tr>
                            }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
        <script type="text/javascript">
            $(document).ready(function () {

                $('#addtravelrecord').click(function () {
                    window.location.href = '../TravelRecord/AddTravelRecord'
                });

                $('#printbtn').click(function () {
                    window.open('../TravelRecord/TravelReport');
                });
            });
        </script>
    }
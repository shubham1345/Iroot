@model Generalate.Models.Sacraments
@{
    ViewBag.Title = "SacramentDetails";

}

<link href="~/css/DropDownSelect2/dist/css/select2.min.css" rel="stylesheet" />
<ul class="breadcrumb">
    <li class="pull-right"><a style="font-size: 30px;" class="fa fa-angle-circle-left" href="/HomeUser/HomeUser"></a></li>
</ul>

<div class="page-content-wrap">
    <div class="row" style="margin-right:-5px;margin-left:-5px;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div id="printbox">
                    <div class="col-sm-12">
                        <div class="panel-group" style="background-color:#001f6b">
                            <div class="panel panel-primary">
                                <div class="tab panel-heading" style="background-color:#001f6b;text-align:center;">
                                    <a class="hidden-print" style="color:white;">Sacrament Details</a>
                                </div>

                                <div class="col-sm-12">
                                    <input type="button" class="btn btn-success pull-right hidden-print" value="Print" id="btnPrint" />
                                </div>
                                <div id="SacramentRecord" class="row" style="margin-left:30px; margin-right:30px;">
                                    <div class="row">
                                        <div class="col-sm-12" id="tblSacrament">
                                            <table class="table table-striped  table-hover" id="TbInst" style="margin-top:20px;">
                                                <thead>
                                                    <tr style="background-color:#001f6b; color:white">
                                                        <th> S.No. </th>
                                                        <th> Name </th>
                                                        <th> Title </th>
                                                        <th> Sacrament</th>
                                                        <th> Minister</th>
                                                        <th> Date</th>
                                                        <th> ChurchName</th>
                                                        <th> Remarks </th>
                                                    </tr>
                                                </thead>
                                                <tbody class="tbody">
                                                    @{
                                                        int ii = 1;
                                                        foreach (var item in ViewBag.allSacramentData as IEnumerable<Generalate.Models.Sacraments>)
                                                        {
                                                            <tr>
                                                                <td>@ii</td>
                                                                <td>@item.Name</td>
                                                                <td>@item.Title</td>
                                                                <td>@item.Sacrament</td>
                                                                <td>@item.Minister</td>
                                                                <td>@item.Date</td>
                                                                <td>@item.ChurchName</td>
                                                                <td>@item.Remarks</td>

                                                            </tr>
                                                            ii++;
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/printThis.js"></script>
    <script>
        $('#btnPrint').on("click", function () {
            $("#TblDeathRecord").css("display", "block");

            $('#printbox').printThis({
                afterPrint: function () {
                    $("#TblDeathRecord").css("display", "block");
                }
            });
        });
    </script>

}


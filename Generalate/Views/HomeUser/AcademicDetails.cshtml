@using Generalate.Controllers;
@model Generalate.Models.tbl_Academy
@{
    ViewBag.Title = "AcademicDetails";
}

<link href="~/css/DropDownSelect2/dist/css/select2.min.css" rel="stylesheet" />
<ul class="breadcrumb">
    <li class="pull-right"><a style="font-size: 30px;" class="fa fa-angle-circle-left" href="/HomeUser/HomeUser"></a></li>
</ul>

<div class="page-content-wrap">
    <div class="row" style="margin-right:-5px;margin-left:-5px;">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div id="printbox">
                    <div class="col-sm-12">
                        <div class="panel-group" style="background-color:#001f6b">
                            <div class="panel panel-primary">
                                <div class="tab panel-heading" style="background-color:#001f6b;text-align:center;">
                                    <a class="hidden-print" style="color:white;"><span>@{@HomeController.GetControlTextByControlId("Academic_Details");}</span></a>
                                </div>

                                <div class="col-sm-12">
                                    <input type="button" class="btn btn-success pull-right hidden-print" value="Print" id="btnPrint" />
                                </div>
                                <div id="AcademicRecord" class="row" style="margin-left:30px; margin-right:30px;">
                                    <div class="row">
                                        <div class="col-sm-12" id="tblinstitution">
                                            <table class="table table-striped  table-hover" id="TbInst" style="margin-top:20px;">
                                                <thead>
                                                    <tr style="background-color:#001f6b; color:white">
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("S_No");}</span> </th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Name");}</span> </th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Title");}</span> </th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Course");}</span> </th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Degree");}</span></th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("University");}</span></th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Medium");}</span></th>
                                                        <th> <span>@{@HomeController.GetControlTextByControlId("Place");}</span></th>
                                                    </tr>
                                                </thead>
                                                <tbody class="tbody">
                                                    @{
                                                        int ii = 1;
                                                        foreach (var item in ViewBag.allAcademicData as IEnumerable<Generalate.Models.tbl_Academy>)
                                                        {
                                                            <tr>
                                                                <td>@ii</td>
                                                                <td>@item.Name</td>
                                                                <td>@item.title</td>
                                                                <td>@item.course</td>
                                                                <td>@item.degree</td>
                                                                <td>@item.university</td>
                                                                <td>@item.medium</td>
                                                                <td>@item.adress</td>
                                                            </tr>
                                                            ii++;
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/printThis.js"></script>
    <script>

        $(document).ready(function () {
            $('#TbInst').DataTable();
        });
     
    </script>
    <script>
        
        $('#btnPrint').on("click", function () {
            $("#TblDeathRecord").css("display", "block");

            $('#printbox').printThis({
                afterPrint: function () {
                    $("#TblDeathRecord").css("display", "block");
                }
            });
        });
    </script>

}


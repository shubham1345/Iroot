@model Generalate.Models.tbl_EntryLife

@{
    Layout = null;
}
<head>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">

    <script type="text/javascript">
    $(document).ready(function () {

        $.getJSON("GetAll",
        function (json) {
            var tr;

            //Append each row to html table
            for (var i = 0; i < json.length; i++) {
                tr = $('<tr />');
                tr.append("<td hidden='hidden'>" + json[i].EntryLifeId + "</td>");
                tr.append('<td><a href=ViewProfile/' + json[i].EntryLifeId + '>' + json[i].MemberID + '</a></td>');
                tr.append("<td>" + json[i].ColName + "</td>");
                tr.append("<td>" + json[i].EntryDate + "</td>");
                tr.append("<td>" + json[i].Place + "</td>");
                tr.append("<td>" + json[i].Director + "</td>");
                tr.append("<td>" + json[i].Minister + "</td>");
                tr.append("<td>" + json[i].OngoingFormation + "</td>");
                $('table').append(tr);

            }
            $('#EmpInfo').DataTable();
        });
    });

    </script>

</head>


<div class="form-horizontal">
    <div class="form-horizontal" style="margin-left:30px; margin-right:30px;">
        <br />

        <table class="table table-striped  table-hover" id="EmpInfo" style="border:solid; border-color:cadetblue">
            <thead>
                <tr style="background-color:cadetblue; color:white">
                    <th hidden="hidden"> Id </th>
                    <th> MemberID </th>
                    <th> ColumnName </th>
                    <th> Date </th>
                    <th> Place </th>
                    <th> ProvincialSuperior </th>
                    <th> Superior </th>
                    <th> BrotherIncharge </th>

                </tr>
            </thead>
            <tbody class="tbody"> </tbody>
        </table>
    </div>

</div>

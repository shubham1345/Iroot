@model Generalate.Models.tbl_EntryLife1

<head>
    @*Required Js File for Apartment*@
 
    <script src="~/Scripts/EntryLife1.js"></script>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.EntryLifeId, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-horizontal" style="margin-left:30px; margin-right:30px;">
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New Ongoing Formation</button>
                    <button type="button" class="btn btn-primary" id="printbtn">Print</button>
                <div class="panel-group">
                    <div class="panel panel-primary" style="margin-top:10px; background-color:#F4ECF7;">
                        <div class="tab panel-heading">
                            <a style="color:white;">Ongoing Formation</a>
                        </div>

                        <div class="" style="margin-left:20px; margin-right:20px;">
                            <div class="form-horizontal">
                                <br />

                                <table class="table table-striped  table-hover" id="EmpInfo1" style="border:solid; border-color:#044244">
                                    <thead>
                                        <tr style="background-color:#044244; color:white">
                                            <th hidden="hidden"> Id </th>
                                            <th> Member ID </th>
                                            <th> Formation Term </th>
                                            <th> Date </th>
                                            <th> Place </th>
                                            <th> Provincial Superior </th>
                                            <th> Superior </th>
                                            <th> Formator Incharge </th>
                                            <th> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody"> </tbody>
                                </table>
                            </div>
                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Ongoing Formation</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-sm-6">

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Member ID
                                                            @Html.EditorFor(model => model.MemberID, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Ongoing Formation Term
                                                            @Html.EditorFor(model => model.ColName, new { htmlAttributes = new { @class = "form-control", list = "generalst" } })
                                                            @Html.ValidationMessageFor(model => model.ColName, "", new { @class = "text-danger" })
                                                            <datalist id="generalst"> </datalist>

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Ongoing Formation Date
                                                            @Html.EditorFor(model => model.EntryDate, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.EntryDate, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Place
                                                            @Html.EditorFor(model => model.Place, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Place, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Provincial Superior
                                                            @Html.EditorFor(model => model.Director, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Director, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Superior
                                                            @Html.EditorFor(model => model.Minister, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.Minister, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10">
                                                            Formator Incharge
                                                            @Html.EditorFor(model => model.OngoingFormation, new { htmlAttributes = new { @class = "form-control" } })
                                                            @Html.ValidationMessageFor(model => model.OngoingFormation, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <div class="col-md-10" align="right">
                                                            <br />
                                                            <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                                                            <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                                                            <button type="button" class="btn btn-success" id="closebtn" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@using Generalate.Controllers;
@model Generalate.Models.Tbl_Cong
@{
    ViewBag.Title = "Sub Community List";
}

<link href="~/css/DropDownSelect2/dist/css/select2.min.css" rel="stylesheet" />
<ul class="breadcrumb">
    <li class="pull-right"><a style="font-size: 30px;" class="fa fa-angle-double-left" href="/SocInsCommPage/SocInsCommPage"></a></li>
</ul>
<div class="page-content-wrap">
    <div class="row" style="margin-right:-5px;margin-left:-5px;">
        <div class="col-md-12">
            <div id="prientbox">
                <div class="col-sm-12">
                    <div class="panel-group" style="background-color:#001f6b">
                        <div class="panel panel-primary">
                            <div class="tab panel-heading" style="background-color:#001f6b;text-align:center;">
                                <a class="hidden-print" style="color:white;"><span>@{@HomeController.GetControlTextByControlId("All_Details");}</span></a>
                            </div>
                            <div class="col-sm-12">
                                <input type="button" class="btn btn-success pull-right hidden-print" value="Print" id="btnPrint" />
                            </div>
                            <div id="PersonalDetailDiv" class="row" style="margin-left:30px; margin-right:30px;">
                                <table class="table table-bordered" id="TblPersionalDetails">
                                    @try
                                    {
                                        <tr><h4 class="hidden-print" style="color:#009be1"><span>@{@HomeController.GetControlTextByControlId("Community_Details");}</span></h4></tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("District/Sector/Region");}</span></th>
                                            <td style="width:30%"><span id="DisSecRegCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Community_Code");}</span></th>
                                            <td><span id="CommunityCodeCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Community_Name");}</span></th>
                                            <td style="width:30%"><span id="CommunityNameCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Place");}</span></th>
                                            <td><span id="PlaceCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Phone");}</span></th>
                                            <td style="width:30%"><span id="PhoneCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Country");}</span></th>
                                            <td><span id="CountryCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Email");}</span></th>
                                            <td style="width:30%"><span id="EmailCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Active/Inactive");}</span></th>
                                            <td><span id="ActiveCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Diocese_Name");}</span></th>
                                            <td style="width:30%"><span id="DioceseNameCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Activities");}</span></th>
                                            <td><span id="ActivitiesCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Address");}</span></th>
                                            <td style="width:30%"><span id="AddressCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Vission");}</span></th>
                                            <td><span id="VissionCommunity"></span></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Mission");}</span></th>
                                            <td style="width:30%"><span id="MissionCommunity"></span></td>
                                            <th><span>@{@HomeController.GetControlTextByControlId("File");}</span></th>
                                            <td><a target="_blank" id="FileCommunity" href="#"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Member_Details");}</span></th>
                                            <td style="width:30%"><a target="_blank" id="MemberdataCommunity" href="#"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                            <th></th>
                                            <td></td>
                                        </tr>
                                    }
                                    catch (Exception ex)
                                    {
                                    }
                                </table>
                                <div class="row">
                                    <div class="col-sm-12" id="ReportTbInstHide">
                                        <table class="table table-striped table-bordered table-hover" id="TbInst" style="margin-top:20px;">
                                            <thead>
                                                <tr style="background-color:#001f6b; color:white">
                                                    <th><span>@{@HomeController.GetControlTextByControlId("S_No");}</span> </th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Title");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Date");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Description");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("File");}</span></th>
                                                </tr>
                                            </thead>
                                            <tbody class="tbody">
                                                @{
                                                    int ii = 1;
                                                    foreach (var item in ViewBag.CongrigationData as IEnumerable<Generalate.Models.CongData>)
                                                    {
                                                        <tr>
                                                            <td>@ii</td>
                                                            <td>@item.other1</td>
                                                            <td>@item.Date</td>
                                                            <td>@item.Description</td>
                                                            <td> <a target="_blank" href="~/Images/Congation/@item.File1"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                                        </tr>
                                                        ii++;
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/printThis.js"></script>
    <script>
        $('#btnPrint').on("click", function () {
            $("#tblAppoint").css("display", "block");

            $('#prientbox').printThis({
                afterPrint: function () {
                    $("#tblAppoint").css("display", "none");
                }
            });
        });
    </script>
    <script>

        $('#btnPrint').on("click", function () {
            $("#ReportTbInstHide").css("display", "block");
            $('#prientbox').printThis({
                afterPrint: function () {
                    $("#ReportTbInstHide").css("display", "none");

                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
          //debugger;
            $('#tblSoc').DataTable();
            $('#TbInst').DataTable();
            $('#Tblcomm').DataTable();
            $('#TblParis').DataTable();
            $('#TblCong').DataTable();
            return false;
        });
    </script>
    <script>
        $(document).ready(function () {
          //debugger;
            GetAllCommunitydatabase();

            function GetAllCommunitydatabase() {
                $.ajax({
                    url: "/IdGenerate/GetAllCommunitydatabase",
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        $("#DisSecRegCommunity").text(data[0].DisSec);
                        $("#CommunityCodeCommunity").text(data[0].CommCode);
                        $("#CommunityNameCommunity").text(data[0].CongregationName);
                        $("#PlaceCommunity").text(data[0].Place);
                        $("#PhoneCommunity").text(data[0].Phone);
                        $("#CountryCommunity").text(data[0].Country);
                        $("#EmailCommunity").text(data[0].EmailId);
                        $("#ActiveCommunity").text(data[0].ActiveCkeck);
                        $("#DioceseNameCommunity").text(data[0].Diocese);
                        $("#ActivitiesCommunity").text(data[0].Activities);
                        $("#AddressCommunity").text(data[0].Address);
                        $("#VissionCommunity").text(data[0].Vission);
                        $("#MissionCommunity").text(data[0].Mission);
                        $("#FileCommunity").attr("href", "/Image/CommunitiesSocialCentresDoc/" + data[0].File);
                        $("#MemberdataCommunity").attr("href", "/SocInsCommPage/CommunityMember/?id=" + data[0].Id);
                    },
                    error: function (er) {
                    }
                });
            }
        });
    </script>
}



@using Generalate.Controllers;
@model Generalate.Models.Societys
@{
    ViewBag.Title = "Sub Society List";
}
<link href="~/css/DropDownSelect2/dist/css/select2.min.css" rel="stylesheet" />
<ul class="breadcrumb">
    <li class="pull-right"><a style="font-size: 30px;" class="fa fa-arrow-circle-left" href="/Home/Admin"></a></li>
</ul>
<div class="page-content-wrap">
    <div class="row" style="margin-right:-5px;margin-left:-5px;">
        <div class="col-md-12">
                <div id="prientbox">
                    <div class="col-sm-12">
                        <div class="panel-group" style="background-color:#001f6b">
                            <div class="panel panel-primary">
                                <div class="tab panel-heading" style="background-color:#001f6b;text-align:center;">
                                    <a class="hidden-print" style="color:white;"><span>@{@HomeController.GetControlTextByControlId("All_Details");}</span></a>
                                </div>

                                <div class="col-sm-12">
                                    <input type="button" class="btn btn-success pull-right hidden-print" value="Print" id="btnPrint" />
                                </div>

                                <div id="PersonalDetailDiv" class="row" style="margin-left:30px; margin-right:30px;">
                                    <table class="table table-bordered" id="TblPersionalDetails">

                                        @try
                                        {
                                            <tr><h4 class="hidden-print" style="color:#009be1"><span>@{@HomeController.GetControlTextByControlId("Details");}</span></h4></tr>

                                            <tr>
                                                <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Society_Name");}</span></th>
                                                <td><span id="PersonKnowName">@Model.NameOfTheSocity</span></td>
                                                <th style="width:30%"><span>@{@HomeController.GetControlTextByControlId("PAN_Number");}</span></th>
                                                <td style="width:17%"><span id="personBaptismalName">@Model.PanNumber</span></td>
                                            </tr>
                                            <tr>
                                                <th><span>@{@HomeController.GetControlTextByControlId("FCRA_Number");}</span></th>
                                                <td><span id="PersonDateofBirthBaptism">@Model.FCRANumber</span></td>
                                                <th><span>@{@HomeController.GetControlTextByControlId("12A_Number");}</span></th>
                                                <td><span id="PersonDateofBirthSSLC">@Model.Number12A</span></td>
                                            </tr>
                                            <tr>
                                                <th><span>@{@HomeController.GetControlTextByControlId("Registration_No");}</span></th>
                                                <td><span>@Model.RegistrationNumber</span></td>
                                                <th><span>@{@HomeController.GetControlTextByControlId("80G_Number");}</span></th>
                                                <td><span>@Model.Number80G</span></td>
                                            </tr>

                                        }
                                        catch (Exception ex)
                                        {
                                        }

                                    </table>
                                    <div class="row">
                                        <div class="col-sm-12" id="ReportTbInstHide">
                                            <table class="table table-striped  table-hover" id="TbInst" style="margin-top:20px;">
                                                <thead>
                                                    <tr style="background-color:#001f6b; color:white">
                                                        <th><span>@{@HomeController.GetControlTextByControlId("S_No");}</span> </th>
                                                        <th><span>@{@HomeController.GetControlTextByControlId("Title");}</span></th>
                                                        <th><span>@{@HomeController.GetControlTextByControlId("Date");}</span></th>
                                                        <th><span>@{@HomeController.GetControlTextByControlId("Description");}</span></th>
                                                        <th><span>@{@HomeController.GetControlTextByControlId("File");}</span></th>
                                                    </tr>
                                                </thead>
                                                <tbody class="tbody">
                                                    @{
                                                        int ii = 1;
                                                        foreach (var item in ViewBag.allData as IEnumerable<Generalate.Models.SocietyData>)
                                                        {
                                                            <tr>
                                                                <td>@ii</td>
                                                                <td>@item.other1</td>
                                                                <td>@item.Date</td>
                                                                <td>@item.Description</td>
                                                                <td> <a target="_blank" href="~/Image/Society/@item.File1"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                                            </tr>
                                                            ii++;
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="~/js/printThis.js"></script>
    <script>
        $('#TbInst').DataTable();
        
        $('#btnPrint').on("click", function () {
            $("#tblAppoint").css("display", "block");

            $('#prientbox').printThis({
                afterPrint: function () {
                    $("#tblAppoint").css("display", "none");
                }
            });
        });
    </script>

}



@using Generalate.Controllers;
@model Generalate.Models.tbl_Congregation
@{
    ViewBag.Title = "SubCongList";
}

<link href="~/css/DropDownSelect2/dist/css/select2.min.css" rel="stylesheet" />
<ul class="breadcrumb">
    <li class="pull-right"><a style="font-size: 30px;" class="fa fa-arrow-circle-left" href="/SocInsCommPage/SocInsCommPage"></a></li>
</ul>
<div class="page-content-wrap">
    <div class="row" style="margin-right:-5px;margin-left:-5px;">
        <div class="col-md-12">
            <div id="prientbox">
                <div class="col-sm-12">
                    <div class="panel-group" style="background-color:#001f6b">
                        <div class="panel panel-primary">
                            <div class="tab panel-heading" style="background-color:#001f6b;text-align:center;">
                                <a class="hidden-print" style="color:white;"><span>@{@HomeController.GetControlTextByControlId("All_Details");}</span></a>
                            </div>
                            <div class="col-sm-12">
                                <input type="button" class="btn btn-success pull-right hidden-print" value="Print" id="btnPrint" />
                            </div>
                            <div id="CongDetailDiv" class="row" style="margin-left:30px; margin-right:30px;">
                                <table class="table table-bordered" id="TblCongDetails">

                                    @try
                                    {
                                        <tr><h4 class="hidden-print" style="color:#009be1"><span>@{@HomeController.GetControlTextByControlId("Generalate");}</span></h4></tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Generalate_Name");}</span></th>
                                            <td style="width:30%"><span id="CongName">@Model.CongregationName</span></td>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Establishment");}</span></th>
                                            <td><span id="PlaceName">@Model.Establishment</span>  </td>
                                        </tr>
                                        <tr>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Email");}</span></th>
                                            <td style="width:30%"><span id="CongName">@Model.Email</span></td>
                                            <th style="width:17%"><span>@{@HomeController.GetControlTextByControlId("Fax");}</span></th>
                                            <td><span id="PlaceName">@Model.Fax</span>  </td>
                                        </tr>
                                        <tr>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Website");}</span></th>
                                            <td><span id="Address">@Model.Website</span></td>
                                            <th> <span>@{@HomeController.GetControlTextByControlId("Phone");}</span> </th>
                                            <td><span id="PhoneNo">@Model.Phone</span>  </td>
                                        </tr>
                                        <tr>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Address");}</span></th>
                                            <td><span id="Address">@Model.Address</span></td>
                                            <th> <span>@{@HomeController.GetControlTextByControlId("Country");}</span> </th>
                                            <td><span id="PhoneNo">@Model.Country</span>  </td>
                                        </tr>
                                        <tr>
                                            <th><span>@{@HomeController.GetControlTextByControlId("Council_Member");}</span></th>
                                            <td><a href="/SocInsCommPage/GeneralCouncil?id=@Model.Id"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                            <th></th>
                                            <td></td>
                                        </tr>
                                    }
                                    catch (Exception ex)
                                    {
                                    }

                                </table>
                                <div class="row">
                                    <div class="col-sm-12" id="ReportTbInstHide">
                                        <table class="table table-striped  table-hover" id="TbInst" style="margin-top:20px;">
                                            <thead>
                                                <tr style="background-color:#001f6b; color:white">
                                                    <th><span>@{@HomeController.GetControlTextByControlId("S_No");}</span> </th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Title");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Date");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Description");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("File");}</span></th>
                                                </tr>
                                            </thead>
                                            <tbody class="tbody">
                                                @{
                                                    int ii = 1;
                                                    foreach (var item in ViewBag.CongregationData as IEnumerable<Generalate.Models.Tbl_CongrationsData>)
                                                    {
                                                        <tr>
                                                            <td>@ii</td>
                                                            <td>@item.Title</td>
                                                            <td>@item.Date</td>
                                                            <td>@item.Description</td>
                                                            <td> <a target="_blank" href="~/Image/Congation/@item.File"><span>@{@HomeController.GetControlTextByControlId("View");}</span></a></td>
                                                        </tr>
                                                        ii++;
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-sm-12" id="ReportTbInst" style="display:none;">
                                        <table class="table table-striped  table-hover" style="margin-top:20px;">
                                            <thead>
                                                <tr style="background-color:#001f6b; color:white">
                                                    <th><span>@{@HomeController.GetControlTextByControlId("S_No");}</span> </th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Title");}</span> </th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Date");}</span></th>
                                                    <th><span>@{@HomeController.GetControlTextByControlId("Description");}</span></th>
                                                </tr>
                                            </thead>
                                            <tbody class="tbody">
                                                @{
                                                    int iii = 1;
                                                    foreach (var item in @ViewBag.CongregationData as IEnumerable<Generalate.Models.Tbl_CongrationsData>)
                                                    {
                                                        <tr>
                                                            <td>@iii</td>
                                                            <td>@item.Title</td>
                                                            <td>@item.Date</td>
                                                            <td>@item.Description</td>
                                                        </tr>
                                                        iii++;
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/printThis.js"></script>
    <script>

        $('#btnPrint').on("click", function () {
            $("#ReportTbInstHide").css("display", "none");
            $("#ReportTbInst").css("display", "block");

            $('#printbox').printThis({
                afterPrint: function () {
                    $("#ReportTbInstHide").css("display", "block");
                    $("#ReportTbInst").css("display", "none");
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {

          //debugger;
            $('#tblSoc').DataTable();
            $('#TbInst').DataTable();
            $('#Tblcomm').DataTable();
            $('#TblParis').DataTable();
            $('#TblCong').DataTable();
            return false;
        });

        $('#fromdate').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy",
            yearRange: '1970:2050',
            onSelect: function (selected) {
                $("#todate").datepicker("option", "minDate", selected)
            }
        });

        $('#todate').datepicker({
            changeMonth: true,
            changeYear: true,
            dateFormat: "dd/mm/yy",
            yearRange: '1970:2050',
            onSelect: function (selected) {
                $("#fromdate").datepicker("option", "maxDate", selected)
            }
        });
    </script>

}



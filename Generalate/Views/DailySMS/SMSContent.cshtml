@model Generalate.Models.tbl_SMSContent

<head>
    <script src="~/Scripts/additional/SMSContent.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style>
        .headline
         {
            width: 400px;
            height: 200px;
         }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="" style="margin-left:30px; margin-right:30px;">
            <div class="form-horizontal">
                <br />
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New</button>
                <div class="panel-group">
                    <div class="panel panel-primary" style="margin-top:10px; background-color:#F4ECF7">
                        <div class="tab panel-heading">
                            <a style="color:white;">Set SMS Content</a>
                        </div>

                        <div class="" style="margin-left:20px; margin-right:20px;">
                            <div class="form-horizontal">
                                <br />
                                <table class="table table-striped  table-hover" id="EmpInfo" style="border:solid; border-color:#044244">
                                    <thead>
                                        <tr style="background-color:#044244; color:white">
                                            <th hidden="hidden"> @Html.LabelFor(model => model.ContentId) </th>
                                            <th> @Html.LabelFor(model => model.Feast) </th>
                                            <th> @Html.LabelFor(model => model.Content)</th>
                                            <th> @Html.LabelFor(model => model.Status)</th>
                                            <th> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody class="tbody"> </tbody>
                                </table>
                            </div>

                            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title" id="myModalLabel">Set SMS Content</h4>
                                        </div>
                                        <div class="modal-body">
                                            <div class="form-group">
                                                @Html.HiddenFor(model => model.ContentId, new { htmlAttributes = new { @class = "form-control" } })
                                                <div class="col-md-10">
                                                    Select Feast
                                                    @Html.EditorFor(model => model.Feast, new { htmlAttributes = new { @class = "form-control", list = "Proffession" } })
                                                    @Html.ValidationMessageFor(model => model.Feast, "", new { @class = "text-danger" })
                                                    <datalist id="Proffession">
                                                        <option value="Feast">
                                                        <option value="Ordination">
                                                        <option value="Birth">
                                                    </datalist>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    Content
                                                   @* @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", style = "width: 400px; height: 200px;" } })*@
                                                    @Html.TextAreaFor(model => model.Content, new { style = "width: 470px;", cols = 30, @rows = 5 })
                                                    @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    Status
                                                    @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-md-10">
                                                    <br />
                                                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Add</button>
                                                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                                                    <button type="button" class="btn btn-success" id="closebtn" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
}
